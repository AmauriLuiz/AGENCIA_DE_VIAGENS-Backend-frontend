<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Agencia_de_Viagens_App</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Agencia_de_Viagens_App.styles.css" asp-append-version="true" />
</head>
<body>

    <header>
        <nav class="color navbar navbar-expand-md navbar-dark bg-dark text-center">

            <div class="navbar-collapse collapse w-100 order-1 order-md-0 dual-collapse2">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Início</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Destinies" asp-action="Destiny">Destinos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Destinies" asp-action="Promotions">Promoções</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">Contato</a>
                    </li>
                </ul>             
            </div>

             <div class="mx-auto order-0">
                 <a class="navbar-brand mx-auto" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/images/AmauriViagens.png" class="rounded-circle logo" alt="Logo">
                 </a>
             </div>   
      
            <div class="navbar-collapse collapse w-100 order-1 order-md-0 dual-collapse2 justify-content-end">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Users" asp-action="Login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Users" asp-action="Create">Cadastrar Usuario</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Destinies" asp-action="Create">Cadastrar Destino</a>
                    </li>
                </ul>
            </div>

        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   <footer class="color border-top footer text-muted">
       <div class="container">
           &copy; 2022 - Desenvolvido por  - <a>Amauri Luiz</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>